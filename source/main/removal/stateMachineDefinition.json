{
    "Comment": "Asset Removal state machine to clean up metadata and proxies generated by Media2Cloud",
    "StartAt": "Remove records and metadata",
    "States": {
        "Remove records and metadata": {
            "Type": "Task",
            "Resource": "${AssetRemovalLambda.Arn}",
            "End": true,
            "Retry": [
                {
                    "ErrorEquals": [
                        "States.ALL"
                    ],
                    "IntervalSeconds": 1,
                    "MaxAttempts": 4,
                    "BackoffRate": 1.2
                }
            ]
        }
    }
}